{
  // Use IntelliSense to find out which attributes exist for C# debugging
  // Use hover for the description of the existing attributes
  // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (TestingConsole)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build (TestingConsole)",
      // If you have changed target frameworks, make sure to update the program path.
      "program": "${workspaceFolder}/Topaz.UI.Consoles.TestingConsole/bin/Debug/netcoreapp3.1/Topaz.UI.Consoles.TestingConsole.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Topaz.UI.Consoles.TestingConsole",
      // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Launch (MigrationConsole)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build (MigrationConsole)",
      // If you have changed target frameworks, make sure to update the program path.
      "program": "${workspaceFolder}/Topaz.UI.Consoles.MigrationConsole/bin/Debug/netcoreapp3.1/Topaz.UI.Consoles.MigrationConsole.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Topaz.UI.Consoles.MigrationConsole",
      // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Launch (UserConsole)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build (UserConsole)",
      // If you have changed target frameworks, make sure to update the program path.
      "program": "${workspaceFolder}/Topaz.UI.Consoles.UserConsole/bin/Debug/netcoreapp3.1/Topaz.UI.Consoles.UserConsole.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Topaz.UI.Consoles.UserConsole",
      // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Launch (Razor)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build (Razor)",
      // If you have changed target frameworks, make sure to update the program path.
      "program": "${workspaceFolder}/Topaz.UI.Razor/bin/Debug/netcoreapp3.1/Topaz.UI.Razor.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Topaz.UI.Razor",
      "stopAtEntry": false,
      // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
