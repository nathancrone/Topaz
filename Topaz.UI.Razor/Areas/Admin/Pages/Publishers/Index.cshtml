@page
@model Topaz.UI.Razor.Areas.Admin.Pages.Publishers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Publisher[0].PublisherId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher[0].IsHidden)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Publisher) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsHidden)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PublisherId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PublisherId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PublisherId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
