@page
@model Topaz.UI.Razor.Areas.Admin.Pages.LetterDoNotContact.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DoNotContactLetter[0].ReportedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoNotContactLetter[0].MailingAddress1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoNotContactLetter[0].MailingAddress2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoNotContactLetter[0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoNotContactLetter[0].Publisher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DoNotContactLetter) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReportedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MailingAddress1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MailingAddress2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.PublisherId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DoNotContactLetterId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DoNotContactLetterId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DoNotContactLetterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
