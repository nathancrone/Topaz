@page
@model Topaz.UI.Razor.Areas.Admin.Pages.ApartmentTerritories.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ApartmentTerritory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApartmentTerritory.TerritoryId" />
            <div class="form-group">
                <label asp-for="ApartmentTerritory.TerritoryCode" class="control-label"></label>
                <input asp-for="ApartmentTerritory.TerritoryCode" class="form-control" />
                <span asp-validation-for="ApartmentTerritory.TerritoryCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentTerritory.StreetTerritory" class="control-label"></label>
                <select asp-for="ApartmentTerritory.StreetTerritoryId" class="form-control" asp-items="@Model.SelectListStreetTerritory">
                    <option value="">-- Select Street Territory --</option>
                </select>
                <span asp-validation-for="ApartmentTerritory.StreetTerritoryId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="ApartmentTerritory.MapLocation" class="control-label"></label>
                <input asp-for="ApartmentTerritory.MapLocation" class="form-control" />
                <span asp-validation-for="ApartmentTerritory.MapLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentTerritory.Notes" class="control-label"></label>
                <input asp-for="ApartmentTerritory.Notes" class="form-control" />
                <span asp-validation-for="ApartmentTerritory.Notes" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ApartmentTerritory.InActive" /> @Html.DisplayNameFor(model => model.ApartmentTerritory.InActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
