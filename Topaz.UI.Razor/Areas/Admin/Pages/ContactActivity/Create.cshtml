@page
@model Topaz.UI.Razor.Areas.Admin.Pages.ContactActivity.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>InaccessibleContactActivity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InaccessibleContactActivity.InaccessibleContactId" class="control-label"></label>
                <select asp-for="InaccessibleContactActivity.InaccessibleContactId" class ="form-control" asp-items="ViewBag.InaccessibleContactId"></select>
            </div>
            <div class="form-group">
                <label asp-for="InaccessibleContactActivity.ActivityDate" class="control-label"></label>
                <input asp-for="InaccessibleContactActivity.ActivityDate" class="form-control" />
                <span asp-validation-for="InaccessibleContactActivity.ActivityDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InaccessibleContactActivity.ContactActivityTypeId" class="control-label"></label>
                <select asp-for="InaccessibleContactActivity.ContactActivityTypeId" class ="form-control" asp-items="ViewBag.ContactActivityTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="InaccessibleContactActivity.PhoneResponseTypeId" class="control-label"></label>
                <select asp-for="InaccessibleContactActivity.PhoneResponseTypeId" class ="form-control" asp-items="ViewBag.PhoneResponseTypeId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="InaccessibleContactActivity.LetterReturned" /> @Html.DisplayNameFor(model => model.InaccessibleContactActivity.LetterReturned)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="InaccessibleContactActivity.Notes" class="control-label"></label>
                <input asp-for="InaccessibleContactActivity.Notes" class="form-control" />
                <span asp-validation-for="InaccessibleContactActivity.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
