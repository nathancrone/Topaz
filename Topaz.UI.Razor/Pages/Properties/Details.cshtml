@page
@model Topaz.UI.Razor.Pages.Properties.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>InaccessibleProperty</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InaccessibleProperty.Territory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InaccessibleProperty.Territory.StreetTerritory.TerritoryCode)  /  @Html.DisplayFor(model => model.InaccessibleProperty.Territory.TerritoryCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InaccessibleProperty.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InaccessibleProperty.Street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InaccessibleProperty.PropertyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InaccessibleProperty.PropertyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InaccessibleProperty.EstimatedDwellingCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InaccessibleProperty.EstimatedDwellingCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InaccessibleProperty.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InaccessibleProperty.Description)
        </dd>
        <dt class="col-sm-2">
            Import Contacts
        </dt>
        <dd class="col-sm-10">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="InaccessibleProperty.InaccessiblePropertyId" />
                <input type="file" asp-for="Upload" />
                <input type="submit" value="Import" class="btn btn-danger" />
            </form>
        </dd>
        @if (Model.InaccessibleContactList != null) {
            <dd class="col-sm-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.InaccessibleContactList.Contacts[0].FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InaccessibleContactList.Contacts[0].LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InaccessibleContactList.Contacts[0].MiddleInitial)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InaccessibleContactList.Contacts[0].Age)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InaccessibleContactList.Contacts[0].MailingAddress1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InaccessibleContactList.Contacts[0].MailingAddress2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InaccessibleContactList.Contacts[0].PhoneNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InaccessibleContactList.Contacts[0].PhoneType)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model.InaccessibleContactList.Contacts) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MiddleInitial)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Age)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MailingAddress1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MailingAddress2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneType.PhoneTypeId)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.InaccessibleContactId">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.InaccessibleContactId">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.InaccessibleContactId">Delete</a>
                            </td>
                        </tr>
                }
                    </tbody>
                </table>
            </dd>
        }

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.InaccessibleProperty.InaccessiblePropertyId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
