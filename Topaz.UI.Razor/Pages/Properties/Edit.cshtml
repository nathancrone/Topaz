@page
@model Topaz.UI.Razor.Pages.Properties.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>InaccessibleProperty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InaccessibleProperty.InaccessiblePropertyId" />
            <div class="form-group">
                <label asp-for="InaccessibleProperty.Territory" class="control-label"></label>
                <select asp-for="InaccessibleProperty.TerritoryId" class="form-control" asp-items="@Model.SelectListTerritory">
                    <option value="">-- Select Street Territory --</option>
                </select>
                <span asp-validation-for="InaccessibleProperty.TerritoryId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="InaccessibleProperty.Street" class="control-label"></label>
                <input asp-for="InaccessibleProperty.Street" class="form-control" />
                <span asp-validation-for="InaccessibleProperty.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InaccessibleProperty.PropertyName" class="control-label"></label>
                <input asp-for="InaccessibleProperty.PropertyName" class="form-control" />
                <span asp-validation-for="InaccessibleProperty.PropertyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InaccessibleProperty.EstimatedDwellingCount" class="control-label"></label>
                <input asp-for="InaccessibleProperty.EstimatedDwellingCount" class="form-control" />
                <span asp-validation-for="InaccessibleProperty.EstimatedDwellingCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InaccessibleProperty.Description" class="control-label"></label>
                <input asp-for="InaccessibleProperty.Description" class="form-control" />
                <span asp-validation-for="InaccessibleProperty.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
